{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "builds": [{
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist/qafront",
                "buildCommand": "cd frontend && npm install && npm run build:vercel"
            }
        },
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [{
            "src": "/api/(.*)",
            "dest": "/api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/dist/qafront/$1"
        }
    ],
    "functions": {
        "api/index.py": {
            "maxDuration": 60
        }
    }
}